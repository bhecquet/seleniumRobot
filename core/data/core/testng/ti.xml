    </test>
    <test name="browser3" parallel="false">
 		<parameter name="variable1" value="value1" />

		<packages>
            <package name="com.seleniumtests.it.driver.screenshots" />
        </packages>

    </test>
    <test name="browserChrome" parallel="false">
 		<parameter name="variable1" value="value1" />

		<classes>
